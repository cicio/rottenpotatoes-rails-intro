-#  This file is app/views/movies/index.html.haml
%h1 All Movie

= form_tag(movies_path, :method => :get, :id=>'ratings_form', ) do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]",1, checked = @select_ratings.include?(rating),:id => "ratings_#{rating}" 
  = submit_tag 'Refresh', :id => 'ratings_submit'

%table#movies
  %thead
    %tr
      %th{:class=> @t}= link_to 'Movie Title', movies_path({:id=> 'title_header', :ratings=> @select_ratings}) 
      %th Rating
      %th{:class=> @r}= link_to 'Release Date', movies_path({:id=> 'release_date_header', :ratings=> @select_ratings}) 
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
